# .flake8 - Configuration file for flake8 linter

[flake8]

# Exclude these directories from linting.
# 'venv' = your virtual environment (third-party packages)
# '.git' = Git metadata
# '__pycache__' = compiled Python bytecode
# 'build', 'dist' = packaging artifacts
exclude = venv, .git, __pycache__, build, dist

# Allow lines up to 100 characters long (default is 79).
# This gives more flexibility while still encouraging readable code.
max-line-length = 100

# Ignore rules that Black intentionally violates
# E203: whitespace before ':'
# W503: line break before binary operator
extend-ignore = E203, W503
